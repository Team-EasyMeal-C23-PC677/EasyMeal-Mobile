<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyMeal" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_darker</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_darker</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface color. -->
        <!--        <item name="colorSurface">@color/grey_lighter_theme</item>-->
        <!--        <item name="colorOnSurface">@color/black</item>-->
        <!--        <item name="colorOnSurfaceVariant">@color/grey_theme</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/secondary</item>
    </style>

    <!--    THEME-->
    <style name="Layout">
        <!--        <item name="android:background">@color/white_theme</item>-->
    </style>

    <!--    SEARCH BAR-->

    <!--    TEXT FIELD-->
    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/grey</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="titleTextColor">@color/grey</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
    </style>

    <style name="TextField.Name">
        <item name="startIconDrawable">@drawable/ic_person</item>
    </style>

    <style name="TextField.Password">
        <item name="startIconDrawable">@drawable/ic_key</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/grey</item>
    </style>

    <style name="TextField.Email">
        <item name="startIconDrawable">@drawable/ic_mail_outline</item>
    </style>

    <!--    PROGRESS BAR-->
    <style name="ProgressBar">
        <item name="android:visibility">invisible</item>
    </style>

    <!--    BUTTON-->
    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Button.Secondary">
        <item name="backgroundTint">@color/secondary</item>
    </style>

    <style name="Button.Primary">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <!--    IMAGEVIEW-->
    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!--    CARD RECIPE-->
    <style name="TextViewRecipe">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_rounded_transparent_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewRecipe.Favorite">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!--    TYPOGRAPHY-->

    <!--    SHAPEABLE IMAGE VIEW-->

    <!--    CHIP-->

    <!--        parent="Widget.MaterialComponents.Chip.Choice"-->
    <style name="Chip"
        >
        <item name="chipMinTouchTargetSize">30dp</item>
        <item name="chipIconVisible">true</item>
        <!--        <item name="chipIconTint">@color/primary</item>-->
        <item name="chipStrokeWidth">2dp</item>
        <!--        <item name="android:textColor">@color/color_choice_chip_text_color</item>-->
        <item name="cornerFamily">rounded</item>
        <item name="chipIconSize">32dp</item>
        <item name="cornerSize">50%</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
    </style>

    <style name="Chip.Pantry" parent="Chip">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="chipIconTint">@color/color_choice_chip_icon_tint</item>
        <item name="chipBackgroundColor">@color/color_choice_chip_background_color</item>
        <item name="chipStrokeColor">@color/color_choice_chip_strokecolor_selector</item>
    </style>

    <style name="Chip.Shopping" parent="Chip">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="chipIconTint">@color/color_choice_chip_icon_tint_secondary</item>
        <item name="chipBackgroundColor">@color/color_choice_chip_background_color_secondary</item>
        <item name="chipStrokeColor">@color/color_choice_chip_strokecolor_selector_secondary</item>
    </style>

    <style name="Theme.EasyMeal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>